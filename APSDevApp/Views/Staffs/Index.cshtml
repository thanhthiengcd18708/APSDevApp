@model IEnumerable<APSDevApp.Models.Staff>
@{ ViewBag.Title = "Index";
}

<h2 style="text-align: center; color: orangered"> Manage Staff</h2>
@using (Html.BeginForm("Index", "Staffs", "POST"))
{
    <div class="form-group">
        <label for="fname" >Search by Staff Email:</label><br>
        @Html.TextBox("searchInput", null, new { @class = "form-control", style = "margin :10px" })
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
}
<table class="table table-bordered">
    <thead>
        <tr>
            <th>E-mail</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ApplicationUser.UserName</td>
                <td>
                    @Html.ActionLink("Edit profile", "Update", "Staffs",
                                                          new { id = item.StaffId },
                                                          new { @class = "btn btn-danger", style = "margin :10px" })
                    @Html.ActionLink("Delete staff account", "Delete", "Staffs",
                                                          new { id = item.StaffId },
                                                          new { @class = "btn btn-primary", style = "margin :10px" })
                    @Html.ActionLink("Reset password", "ResetPassword", "Account",
                                                          new { id = item.ApplicationUser.Id },
                                                          new { @class = "btn btn-danger", style = "margin :10px" })
                </td>
            </tr>
        }
    </tbody>
</table>