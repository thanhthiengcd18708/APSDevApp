@model  APSDevApp.Models.Course
@{
    ViewBag.Title = "Create";
}

<h2>Create a Task</h2>

@using (Html.BeginForm("Create", "Courses", "POST"))
{
    <div class="form-group">
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
        @Html.LabelFor(model => model.Dc)
        @Html.TextAreaFor(model => model.Name, new { @class = "form-control" })
 
        <button type="submit" class="btn btn-primary">Create a Task</button>


    </div>
}