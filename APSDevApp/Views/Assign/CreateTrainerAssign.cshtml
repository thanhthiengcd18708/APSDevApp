@model APSDevApp.ViewModels.TrainerandTraineeCourseList
@{
    ViewBag.Title = "CreateTrainerAssign";
}

<h2>Trainer Not In Course</h2>
<div>
    <p>List Trainer Not In Course</p>
</div>

<table>
    <thread>
        <tr>
            <th>UserName</th>
            <th>FullName</th>
            <th>PhoneNumber</th>
            <th>Working Place</th>
            <th>Type</th>
            <th>Action</th>
        </tr>
    </thread>
    <tbody>
        @foreach (var item in Model.Trainers)
        {
            <tr>
                <td>@item.ApplicationUser.UserName</td>
                <td>@item.ApplicationUser.FullName</td>
                <td>@item.PhoneNumber</td>
                <td>@item.WorkingPlace</td>
                <td>@item.Type</td>
                <td>
                    @using (Html.BeginForm("Assign trainer to a course.", "Assign", "POST"))
                    {
                        <div>
                            <input type="hidden" name="CourseId" value="@Model.Course.Id">
                            <input type="hidden" name="TrainerId" value="@item.TrainerId">
                        </div>
                        <div>
                            <button>Add</button>
                        </div>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>